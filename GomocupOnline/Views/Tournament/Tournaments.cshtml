@model IEnumerable<GomocupOnline.Models.TournamentModel>

@{
    ViewBag.Title = "Tournaments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            List
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Matches", "Matches", new { Tournament = item.Title })            
        </td>
    </tr>
}

</table>
